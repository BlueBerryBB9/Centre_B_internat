{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>N_chambre</th>
                <td>{{ chambre.nChambre }}</td>
            </tr>
            <tr>
                <th>Nom_bat</th>
                <td>{{ chambre.nomBat }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ chambre.capacite }}</td>
            </tr>
            <tr>
                <th>Capacite_lit</th>
                <td>{{ chambre.capaciteLit ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Handicap</th>
                <td>{{ chambre.handicap }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td>{{ chambre.formation }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ chambre.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ chambre.prenom }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ chambre.isActive ? 'Yes' : 'No' }}</td>
